@model IEnumerable<PersonResponse>

@{
    Layout = null;
}
<link href="@("Http://"+Context.Request.Host.ToString()+"/css/StyleSheet.css")" rel="stylesheet" />
<h1>Persons</h1>
<div class="container">

    <table class="table w-100 mt">
        <thead>
            <tr>
                <th>PersonName</th>
                <th>Email</th>
                <th>Country</th>
                <th>Gender</th>
                <th>Date Of Birth</th>
                <th>Age</th>
                <th>Address</th>
                <th>Receive News Letters</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:8%">@item.PersonName</td>
                    <td style="width:12%">@item.Email</td>
                    <td style="width:10%">@item.Country</td>
                    <td style="width:10%">@item.Gender.ToString()</td>
                    <td style="width:10%">@item.DateOfBirth?.ToString("dd MMMM yyyy")</td>
                    <td style="width:10%">@item.Age</td>
                    <td style="width:20%">@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>
