@{
    ViewBag.Title = "Create Person";
}
@model PersonAddRequest

<a class="link-hover" asp-controller="Persons" asp-action="Index">Persons</a>
<h>Person create</h>

<div class="container w-50">
    <form method="post" asp-controller="Persons" asp-action="Create">
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="@Model.PersonName" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <input asp-for="@Model.PersonName" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="@Model.Email" class="form-label "></label>
            </div>
            <div class="flex-1">
                <input asp-for="@Model.Email" type="email" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="@Model.DateOfBirth" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <input asp-for="@Model.DateOfBirth" type="date" class="form-input" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="@Model.Gender" class="form-label "></label>
            </div>
            <div class="flex-1">
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                }
                @foreach (string gender in genders)
                {
                    <input type="radio" asp-for="Gender" value="@gender" class="ml" />
                    <label for="@gender">@gender</label>
                }

            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="CountryId" class="form-label ">Country</label>
            </div>
            <div class="flex-1">
                <select asp-for="CountryId" class="form-input">
                    <option>Select Country</option>
                    @foreach (CountryResponse item in ViewBag.Countries)
                    {
                        <option value="@item.CountryId">@item.CountryName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Address" class="form-label ">Address</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Address" class="form-input" ></textarea>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="checkbox" asp-for="ReceiveNewsLetters" value="true" />
                <label asp-for="ReceiveNewsLetters" class="form-input"></label>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25"></div>

            <div class="w-25">
                <button type="submit" class="button button-green-back">Submit</button>
                <hr />
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (var item in ViewBag.Errors)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>